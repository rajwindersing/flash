<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ImageView
        android:id="@+id/reportBackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_general"
        android:src="@drawable/ic_chevron_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_general"
        android:text="@string/title_report"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_eighteen" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reportRecylerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reportBackbtn"
        android:layout_marginStart="@dimen/margin_general_half"
        android:layout_marginTop="@dimen/margin_general_fifteen"
        android:layout_marginEnd="@dimen/margin_general_half"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/reportEmptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/title_no_data_found"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_fifteen"
        android:visibility="gone" />
</RelativeLayout>