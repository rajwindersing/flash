<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_general">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_general"
        android:text="@string/title_email_address"
        android:textSize="@dimen/font_size_twenty" />

    <EditText
        android:id="@+id/emailAddressEdtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/margin_general"
        android:layout_marginEnd="@dimen/margin_general"
        android:maxLines="1"
        android:hint="@string/title_enter_email"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_light"
        android:textSize="@dimen/font_size_fifteen" />

    <TextView
        android:id="@+id/sendEmailBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_general"
        android:layout_marginTop="@dimen/margin_general_double"
        android:layout_marginEnd="@dimen/margin_general"
        android:background="@drawable/rectangle_corners_radius"
        android:gravity="center"
        android:paddingStart="@dimen/margin_general_fourty"
        android:paddingTop="@dimen/padding_general"
        android:paddingEnd="@dimen/margin_general_fourty"
        android:paddingBottom="@dimen/padding_general"
        android:text="@string/title_send_email"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_fourteen" />

    <TextView
        android:id="@+id/emailCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_general"
        android:layout_marginBottom="@dimen/margin_general"
        android:padding="@dimen/padding_general_fifteen"
        android:paddingStart="@dimen/margin_general_fourty"
        android:paddingEnd="@dimen/margin_general_fourty"
        android:text="@string/title_cancel"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size_fourteen" />

</LinearLayout>